@model LMSModel

<h2><img class="lms-logo" src="~/images/Secondary gradient.png" alt="Upskilled LMS Logo">@ViewData["Title"]</h2>
<h4>@ViewData["Message"]</h4>
<h4 class="error">@ViewData["Error"]</h4>
<p>@ViewData["RedirectFrom"]</p>
<p>@ViewData["LMS_Cookies"]</p>
<hr />
<div class="row">
	<div class="col-sm-12">
		<form asp-action="Login" asp-controller="LMS" method="post" asp-antiforgery="false">
			<div class="row">
				<div class="col-sm-3"></div>
				<div class="col-sm-6">
					<div class="form-group">
						<label for="username">Username:</label>
						<input name="username" required type="text" maxlength="128" placeholder="Your LMS username" autocomplete="off" class="form-control" />
					</div>
					<div class="form-group">
						<label for="password">Password:</label>
						<input name="password" required type="password" maxlength="128" placeholder="Your LMS password" autocomplete="off" class="form-control" />
					</div>
					<button type="submit" value="login" class="btn btn-default">Login with LMS</button>
				</div>
				<div class="col-sm-3"></div>
			</div>
		</form>
	</div>
</div>
